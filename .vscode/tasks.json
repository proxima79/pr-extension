{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch and Build Extension",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                "$esbuild-watch"
            ]
        }
    ]
}